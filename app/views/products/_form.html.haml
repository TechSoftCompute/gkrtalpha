= form_for @product, :html => { :class => 'form-horizontal' }, :validate => true do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :price, :class => 'control-label'
    .controls
      = f.text_field :price, :class => 'text_field'
  .control-group
    = f.label :image, :class => 'control-label'
    .controls
      = f.file_field :image, :class => 'file_field'
  .control-group
    = f.label :remote_image_url,"or Image URL", :class => 'control-label'
    .controls
      = f.text_field :remote_image_url, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area',:rows=>"5"
  .control-group
    = f.label :category_id,"Category", :class => 'control-label'
    .controls
      = f.select :category_id,Category.all.collect{|c| [c.name,c.id]}, {:prompt => 'Select Category'}, :class => 'text_area',:rows=>"5"
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),products_path, :class => 'btn'