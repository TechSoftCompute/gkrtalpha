%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  .control-group
    = f.label :email
    .controls
	    = f.email_field :email
  .control-group
    = f.label :password
    .controls
	    = f.password_field :password
  .control-group
    = f.label :password_confirmation
    .controls
	    = f.password_field :password_confirmation
  .control-group
  	.controls
  		= f.submit "Sign up"
= render "links"